{
    "manifest_version": 3,
    "name": "SnapStudy",
    "version": "1.0",
    "description": "A simple extension to take screenshots and save them to a specific folder.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "webNavigation"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
      "default_popup" : "popup.html",
      "default_icon": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
      }
    }
  }
  